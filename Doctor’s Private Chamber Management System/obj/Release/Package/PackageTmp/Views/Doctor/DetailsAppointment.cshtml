@model WebApplication1.Models.Prescription
@{
    ViewBag.Title = "DetailsAppointment";
}

<h2>DetailsAppointment</h2>
<hr />
<br />
<a href="@Url.Action("AllAppoinments", "Doctor")" class="btn btn-outline-dark btn-sm">Back</a>
<br />
<br />
@if (Model == null) {
    <h3 class="text-center">No Prescription Found</h3>
} else {
<div class="container text-center mb-5">
    <table class="table table-hover mx-auto">
        <tr>
            <th>Prescription Date</th>
            <th>Diagnosis</th>
            <th>Additional Notes</th>
            <th>Action</th>
        </tr>
        <tr>
            <td>@Html.DisplayFor(p => p.PrescriptionDate)</td>
            <td>@Html.DisplayFor(p => p.Diagnosis)</td>
            <td>@Html.DisplayFor(p => p.AdditionalNotes)</td>
            <td>
                <a href="@Url.Action("DetailsPrescription", "Doctor", new { prescriptionId = Model.PrescriptionId })" class="btn btn-success btn-sm">Details</a>
            </td>
         </tr>
        
    </table>
</div>
}